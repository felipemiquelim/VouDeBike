<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:weightSum="1"
    android:background="#cee2f4">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/logout_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:onClick="faceLogout"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Menu - Vou de Bike"
        android:textSize="30dp"
        android:textStyle="italic" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.36">


        <ImageButton
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:id="@+id/btnRota"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/rota"
            android:onClick="onButtonClick"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:id="@+id/btnEstabelecimento"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/estabelecimentos"
            android:onClick="onButtonClick"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:id="@+id/btnLocalizacao"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/localizacao"
            android:onClick="onButtonClick"
            />

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:id="@+id/btnFacebook"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/facebook"
            android:onClick="onButtonClick"/>
    </GridLayout>

</LinearLayout>


    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:foregroundGravity="left"
        android:id="@+id/listView"
        android:layout_gravity="left"
        android:background="#cee2f4"></ListView>

</android.support.v4.widget.DrawerLayout>
