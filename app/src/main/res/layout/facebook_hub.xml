<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#cee2f4">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:background="@drawable/menu"/>


    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/friendProfilePicture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:gravity="center_horizontal"
        android:padding="5sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postar no Mural"
        android:id="@+id/btnPostar"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/friendProfilePicture"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartilhar Localização"
        android:id="@+id/btnLocalizacao"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/btnPostar"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

